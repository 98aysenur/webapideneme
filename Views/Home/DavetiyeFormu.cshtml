@model  webapideneme.Models.DavetiyeModel
@{
    ViewBag.Title = "DavetiyeFormu";
}

<div class="panel panel-success">
    <div class="panel-heading">
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Ad :</label>
                    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Eposta</label>
                    @Html.TextBoxFor(x => x.Eposta, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Katılacak Mısın?</label>
                   @Html.DropDownListFor(x => x.KatilmaDurumu, new[] {
              new SelectListItem() {Text="Evet,Geliyorum.",
              Value=bool.TrueString},
               new SelectListItem() {Text="Maalesef Gelemiyorum.",
              Value=bool.FalseString}

              },"Geliyor musun?", new { @class = "form-control" }
              )
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="gönder" />
                </div>
            }
        </div>
    </div>
</div>

